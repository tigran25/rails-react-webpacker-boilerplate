<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
    <%= render 'shared/error_messages', object: resource %>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control input-lg", placeholder: _('Enter your email address'), autofocus: true, hide_label: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control input-lg", placeholder: _('Enter your password'), autocomplete: "off", hide_label: true %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me, checked: true, label: _('Keep me logged in') %>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit _("Sign in"), class: "btn btn-block -lg" %>
  </div>

  <p>
    <%= link_to _("Forgot password?"), new_user_password_path, remote: true %>
  </p>
<% end %>
