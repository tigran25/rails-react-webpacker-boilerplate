<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
  <%= render 'shared/error_messages', object: resource %>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control input-lg", placeholder: _("Enter your email address"),
                      autofocus: true, hide_label: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control input-lg",
                         placeholder: _("Enter a password (%s characters minimum)") % @minimum_password_length,
                         autocomplete: "off", hide_label: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control input-lg",
                         placeholder: _("Confirm your password"), autocomplete: "off", hide_label: true %>
  </div>

  <div class="form-group">
    <%= f.submit "Create account", class: "btn btn-block" %>
  </div>
<% end %>
